<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".ConnectionActivity"
    android:background="#d6c50700">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/textConnection"
        android:id="@+id/labelConnection"
        android:textSize="25sp"
        android:textColor="#ffffff"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:textStyle="bold" />

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/newNickname"
        android:id="@+id/buttonInscription"
        android:paddingLeft="20dp"
        android:layout_gravity="center_horizontal"
        android:layout_below="@+id/password"
        android:layout_alignLeft="@+id/password"
        android:layout_alignStart="@+id/password" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:ems="10"
        android:id="@+id/nickname"
        android:hint="@string/nickname"
        android:layout_marginTop="37dp"
        android:layout_below="@+id/labelConnection"
        android:layout_centerHorizontal="true"
        android:textColorHint="#b8b8b8"
        android:textColor="#ffffff" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPassword"
        android:ems="10"
        android:id="@+id/password"
        android:hint="@string/pw"
        android:layout_below="@+id/nickname"
        android:layout_alignLeft="@+id/nickname"
        android:layout_alignStart="@+id/nickname"
        android:textColorHint="#b8b8b8"
        android:textColor="#ffffff" />

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/logOn"
        android:id="@+id/buttonConnection"
        android:layout_gravity="right"
        android:layout_below="@+id/password"
        android:layout_toRightOf="@+id/buttonInscription"
        android:layout_toEndOf="@+id/buttonInscription" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="@string/pwForgotten"
        android:id="@+id/pwForgotten"
        android:textColor="#00d5dc"
        android:textSize="20sp"
        android:layout_below="@+id/buttonInscription"
        android:layout_alignRight="@+id/password"
        android:layout_alignEnd="@+id/password" />

</RelativeLayout>
