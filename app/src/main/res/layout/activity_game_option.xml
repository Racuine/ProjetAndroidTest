<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.henallux.androidproject.GameOptionActivity"
    android:background="#d6c50700">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="@string/titleOption"
        android:id="@+id/titleOption"
        android:textSize="40sp"
        android:textColor="#ffffff"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="@string/optionMusic"
        android:id="@+id/optionMusic"
        android:layout_below="@+id/titleOption"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="77dp"
        android:textColor="#ffffff" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="@string/optionSound"
        android:id="@+id/optionSound"
        android:layout_marginTop="37dp"
        android:layout_below="@+id/optionMusic"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:textColor="#ffffff" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="@string/resetData"
        android:id="@+id/textDeleteData"
        android:layout_alignLeft="@+id/optionSound"
        android:layout_alignStart="@+id/optionSound"
        android:layout_below="@+id/textView3" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="@string/deconnection"
        android:id="@+id/textView3"
        android:layout_marginTop="35dp"
        android:layout_below="@+id/optionSound"
        android:layout_alignLeft="@+id/textDeleteData"
        android:layout_alignStart="@+id/textDeleteData" />

    <RadioGroup
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignTop="@+id/optionMusic"
        android:layout_toRightOf="@+id/titleOption"
        android:layout_toEndOf="@+id/titleOption"
        android:layout_above="@+id/optionSound"
        android:orientation="horizontal"
        android:id="@+id/radioGroup">

        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/on"
            android:id="@+id/radioButtonMusicOn"
            android:checked="true"
            android:textColor="#ffffff" />

        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/off"
            android:id="@+id/radioButtonMusicOff"
            android:checked="false"
            android:textColor="#ffffff" />
    </RadioGroup>

    <RadioGroup
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:layout_alignLeft="@+id/radioGroup"
        android:layout_alignStart="@+id/radioGroup"
        android:layout_alignTop="@+id/optionSound"
        android:layout_alignBottom="@+id/optionSound"
        android:id="@+id/radioGroup2">

        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/on"
            android:id="@+id/radioButtonSoundOn"
            android:checked="true"
            android:textColor="#ffffff" />

        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/off"
            android:id="@+id/radioButtonSoundOff"
            android:checked="false"
            android:textColor="#ffffff" />
    </RadioGroup>
</RelativeLayout>