<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.henallux.androidproject" >



    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.GET_ACCOUNTS" />
    <uses-permission android:name="android.permission.USE_CREDENTIALS" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <meta-data
            android:name="com.facebook.sdk.ApplicationId"
            android:value="@string/facebook_app_id" />
        <activity
            android:name=".ConnectionActivity"
            android:label="@string/app_name" >
            <!--<intent-filter>

                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>-->
        </activity>
        <activity
            android:name=".GameMenuActivity"
            android:label="@string/title_activity_game_menu" >
        </activity>
        <activity
            android:name=".LevelGameActivity"
            android:label="@string/title_activity_level_game"
            android:screenOrientation="portrait" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".GameOptionActivity"
            android:label="@string/title_activity_game_option"
            android:screenOrientation="portrait" >
        </activity>
        <activity
            android:name=".StatisticsActivity"
            android:label="@string/title_activity_statistics"
            android:screenOrientation="portrait" >
        </activity>
        <activity
            android:name=".RankingsActivity"
            android:label="@string/title_activity_rankings"
            android:screenOrientation="portrait" >
        </activity>
        <activity
            android:name=".InscriptionActivity"
            android:label="@string/title_activity_inscription" >
        </activity>
        <activity
            android:name=".GameActivity"
            android:label="@string/title_activity_game"
            android:screenOrientation="portrait" >
        </activity>
        <activity
            android:name=".PasswordForgottenActivity"
            android:label="@string/title_activity_password_forgotten" >
        </activity>
        <activity
            android:name=".GameStatisticsActivity"
            android:label="@string/title_activity_game_statistics" >
        </activity>
        <activity
            android:name="com.facebook.FacebookActivity"
            android:configChanges="keyboard|keyboardHidden|screenLayout|screenSize|orientation"
            android:theme="@android:style/Theme.Translucent.NoTitleBar"
            android:label="@string/app_name" >
        </activity>
    </application>

</manifest>
